{{#each posts}}
      <article class="">
        <div class="card-body flex-row justify-space-between">
          <h2>
            <a href="/post/{{id}}">{{title}}</a>
          </h2>
          <div>
            Posted by {{User.name}} on {{format_date createdAt}}
          </div>
          <div class="card-body">
            {{body}}
          </div>
        </div>
      </article>
{{/each}}